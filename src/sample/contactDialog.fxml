<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.ContactController"
            prefHeight="400.0" prefWidth="600.0">
    <headerText>
        New contact information:
    </headerText>
    <content>
        <GridPane vgap="8" hgap="8">
            <Label text="First Name: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtFirstName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Last Name: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="txtLastName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Phone Number: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="txtPhone" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Notes: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextArea fx:id="txtNotes" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </GridPane>
    </content>
</DialogPane>
